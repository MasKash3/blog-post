<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
<h1><%=post.title%>
  <form class="btnForm" action="/delete" method="post">
    <button type="submit" class="trashBtn" name="trashButton" value="<%= post._id %>">
      <i class="fas fa-trash-alt trash"></i>
    </button>
  </form>
</h1>
<p><%=post.content.substring(0, 100) + " ..."%>
  <a href="/posts/<%= post.title %>">Read More</a>
</p>
<% }); %>

<form action="/compose" method="get">
  <button class="btn btn-dark" type="submit"><i class="fas fa-pencil-alt"></i> Compose</button>

</form>

<%- include("partials/footer") -%>
